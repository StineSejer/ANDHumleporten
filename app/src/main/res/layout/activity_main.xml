<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen.MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="97dp"
        android:fontFamily="@font/ariel_hebrew"
        android:gravity="center_horizontal"
        android:text="Humleporten"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/beerSch"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/roundbt"
        android:fontFamily="@font/ariel_hebrew"
        android:text="Beer Schedule"
        android:textSize="20sp" />

    <Button

        android:id="@+id/OwnBrewSch"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/beerSch"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/roundbt"
        android:fontFamily="@font/ariel_hebrew"
        android:text="Your own beer notes"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/beerLibrarybt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/OwnBrewSch"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/roundbt"
        android:fontFamily="@font/ariel_hebrew"
        android:text="Beer Video"
        android:textSize="20sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="293dp"
        android:layout_marginEnd="30dp"
        android:onClick="logout"
        android:text="LogOut" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/navigation_header"
    android:background="@color/design_default_color_on_primary"
    app:itemBackground="@color/design_default_color_on_primary"

    app:itemTextColor="@drawable/selector"
    app:itemIconTint="@drawable/selector"
    app:menu="@menu/navigation_menu"
    android:layout_alignParentBottom="true">

</com.google.android.material.bottomnavigation.BottomNavigationView>








</RelativeLayout>